//a ve b iki int değişken olsun 

//toplama a + b
//çıkarma a - b
//çarpma a * b
//bölme a / b
//kalanı bulma a % b, a'nın b'ye bölümünden kalan
//üs alma a ** b (a üzeri b)

uint a = 12;
uint b = 4;
uint sonuc = 0;

sonuc = a + b;     // 12 + 4 = 16
sonuc = a - b;     // 12 - 4 = 8
sonuc = a * b;     // 12 * 4 = 48
sonuc = a / b;     // 12 / 4 = 3
sonuc = a % b;     // 12 % 4 = 0
sonuc = a ** b;    // 12 ^ 4 = 20736
